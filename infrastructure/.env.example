# TrueHour Configuration
# Copy this file to .env and customize for your deployment

# App Settings
APP_PORT=8181
TIMEZONE=America/New_York

# FAA Aircraft Lookup Feature
# Set to 'true' to enable FAA aircraft lookups using the baked-in database
# Set to 'false' to run without FAA lookup (uses ForeFlight CSV data only)
ENABLE_FAA_LOOKUP=true

# Database Configuration
DATABASE_URL=postgresql://truehour:truehour@db:5432/truehour

# Security Notes:
# - Change default passwords for production deployments
# - Use environment-specific passwords for cloud deployments
# - Never commit .env file to version control
